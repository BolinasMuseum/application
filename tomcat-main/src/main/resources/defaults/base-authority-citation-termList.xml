<record id="preferredCI" in-recordlist="no" separate-record="false">
    <hassoftdelete>true</hassoftdelete>
    <section>
        <!-- List containing this item's preferred term and any non-preferred terms -->
        <repeat id="citationTermGroupList/citationTermGroup">
            <!-- Fields common across all authority items -->
            <field id="termDisplayName" ui-search="repeatable" in-title="yes" display-name="yes"
                   mini="summary,number,search,list,relate">
                <title-selector>titleBar-displayName</title-selector>
            </field>
            <field id="termName" ui-search="repeatable" ></field>            
            <field id="termType" autocomplete="vocab-citationtermtype" ui-type="enum"></field>
            <field id="termStatus" ui-search="repeatable" seperate_ui_container="true"
                   mini="search,list,relate">
                <options>
                    <option id="provisional" default="yes">Provisional</option>
                    <option id="under review">Under Review</option>
                    <option id="accepted">Accepted</option>
                    <option id="rejected">Rejected</option>
                </options>
            </field>
            <field id="termQualifier"></field>     
            <field id="termLanguage" ui-search="repeatable"
                   autocomplete="vocab-languages" ui-type="enum">
            </field>
            <field id="termPrefForLang" datatype="boolean">
            </field>
            <!-- termSource will be a Citation Authority autocomplete field -->
            <!-- when that service is implemented -->
            <field id="termSource"></field>
            <field id="termSourceDetail"></field>
            <field id="termSourceID"></field>
            <field id="termSourceNote"></field>
            <!-- Fields specific to Citation terms -->
            <field id="termFullCitation" ui-search="repeatable"></field>
            <field id="termTitle"></field>
            <field id="termSubTitle"></field>
            <field id="termSectionTitle"></field>
            <field id="termVolume"></field>
            <field id="termIssue"></field>
        </repeat>
    </section>

				
</record>
