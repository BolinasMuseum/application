<!-- this file tells the config loader what to do with various system properties, where to find them, etc -->
<config>
  <properties>chain.properties</properties>
  <properties name="jboss">${jboss.server.home.dir}/conf/chain.properties</properties>
  
  <option name="storage-type">
    <attribute>storage</attribute>
    <property src="jboss">cspace.chain.store</property>
    <property>cspace.chain.store</property>
    <default>service</default>
  </option>
  
  <option name="store-url">
    <attribute>store-url</attribute>
    <property src="jboss">cspace.chain.store.url</property>
    <property>cspace.chain.store.url</property>
  </option>
  
  <option name="store">
    <attribute>test-store</attribute>
    <property src="jboss">cspace.chain.store.dir</property>
    <property>cspace.chain.store.dir</property>
    <tmpdir/>
  </option>
  
  <option name="schema">
    <attribute>test-store</attribute>
    <property src="jboss">cspace.chain.schema.dir</property>
    <property>cspace.chain.schema.dir</property>
    <tmpdir/>
  </option>

  <option name="login-dest">
    <attribute>test-login-dest</attribute>
    <property src="jboss">cspace.chain.login.dest</property>
    <property>cspace.chain.login.dest</property>
    <default>/cspace-ui/html/createnew.html</default>
  </option>

  <option name="failed-login-dest">
    <attribute>test-failed-login-dest</attribute>
    <property src="jboss">cspace.chain.login.failed.dest</property>
    <property>cspace.chain.login.failed.dest</property>
    <default>/cspace-ui/html/index.html</default>
  </option>
  
  <option name="main-config">
    <attribute>test-main-config</attribute>
    <property src="jboss">cspace.chain.config.main</property>
    <property>cspace.chain.config.main</property>
    <classpath>org/collectionspace/chain/controller/default.xml</classpath>
  </option>
  
  <!-- only for testing -->
  <option name="test">
    <default>success</default>
  </option>
</config>
